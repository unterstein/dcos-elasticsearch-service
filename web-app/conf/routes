GET         /                    controllers.AuthorizationController.loginPage

POST        /register            controllers.AuthorizationController.register
POST        /login               controllers.AuthorizationController.login


GET         /apps                controllers.AppsController.list
POST        /apps                controllers.AppsController.create


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
